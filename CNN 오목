import sys
import numpy as np
import cv2
import time
import os

from PyQt5.QtWidgets import QApplication, QWidget, QLabel, QVBoxLayout
from PyQt5.QtGui import QPixmap, QImage
from PyQt5.QtCore import Qt

class omok(QWidget): 

    def __init__(self): 
        super().__init__()
    def initUI(self): 
        
        board_size = 15 
        self.board_size = board_size 
        self.board = np.zeros([board_size,board_size])
        self.board_history = np.zeros([board_size,board_size])
        self.cnt = 1
        
        time_now = time.gmtime(time.time())

        save_name = str(time_now.tm_year) + '_'+ str(time_now.tm_mon) + '_' + str(time_now.tm_mon)
        + '_' + str(time_now.tm_mon)         

        save_name_png = 
        
        board_cv2 = cv2.imread('source/board1515.png')
        self.board = cv2.cvtColor(board_cv2,cv2.COLOR_BGR2RGB)

        white_ball = cv2.imread('source/white_ball.png')
        self.white_ball = cv2.cvtColor(white_ball,cv2.COLOR_BGR2RGB)

        black_ball = cv2.imread('soucre/black_ball.png')
        self.black_ball = cv2.cvtColor(black_ball,cv2.COLOR_BGR2RGB)

        height , width, channel = self.board_cv2.shape
        bytesPerLine = 3*width 
        qimg_board = QImage(self.board_cv2.data,height,width,bytesPerLine,Qimage.Format_RGB888)
        
        self.player = 1
        x= 0 
        y= 0 
        self.lbl_img = QLabel()
        self.lbl_img.setPixmap(QPixmap(qimg_board)) 
        self.vbox = QVBoxLayout()
        self.vbox.addWidget(self.lbl_img)
        self.setLayout(self.vbox)
        self.setWindowTitle('오목 시뮬레이션')
        self.move(100,100) 
        self.resize(500,500) 
        self.show()
